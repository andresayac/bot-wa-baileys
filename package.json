{
  "name": "@bot-wa/bot-wa-baileys",
  "version": "1.1.3",
  "description": "Creacte a bot for whatsapp with baileys library or bot-whatsapp",
  "main": "lib/baileys.js",
  "types": "lib/baileys.d.ts",
  "scripts": {
    "build": "tsc",
    "example": "tsc && node -r ts-node/register examples/bot.ts",
    "example-bot-whatsapp-json": "tsc && node -r ts-node/register examples/bot-whatsapp-json.mjs",
    "example-bot-whatsapp-memory": "tsc && node -r ts-node/register examples/bot-whatsapp-memory.mjs",
    "example-bot-whatsapp-mongo": "tsc && node -r ts-node/register examples/bot-whatsapp-mongo.mjs",
    "example-bot-whatsapp-mysql": "tsc && node -r ts-node/register examples/bot-whatsapp-mysql.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andresayac/bot-wa-baileys.git"
  },
  "keywords": [
    "bot",
    "baileys",
    "whatsapp",
    "bot-whatsapp",
    "flow",
    "chatbot",
    "whatsapp"
  ],
  "files": [
    "./lib/**/*"
  ],
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@whiskeysockets/baileys": "^6.4.0",
    "fluent-ffmpeg": "^2.1.2",
    "qr-image": "^3.2.0",
    "qrcode-terminal": "^0.12.0",
    "wa-sticker-formatter": "^4.4.4"
  },
  "author": "Andres Aya",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andresayac/bot-wa-baileys/issues"
  },
  "homepage": "https://github.com/andresayac/bot-wa-baileys#readme",
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^20.4.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
